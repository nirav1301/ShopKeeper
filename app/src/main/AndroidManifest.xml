<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shopkeeper">

    <application
        android:name="com.example.shopkeeper.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_icon"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.ShopKeeper">
        <activity android:name=".sendinvoice.SendInvoiceActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".homescreen.HomeActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".forgotpassword.ForgotPasswordActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".addcustomer.AddCustomerActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".sendorder.PlaceOrderActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".Order.OrderHistory" />
        <activity android:name=".Order.CreateOrder"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".findcustomer.ShippingActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".Order.Scanner" />
        <activity
            android:name=".HomeScreen.HomeScreenActivity"
            android:windowSoftInputMode="adjustResize"
            android:label="Home Page" />
        <activity android:name=".splashscreen.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".authentication.MainActivity"
            android:label="Login"
            android:windowSoftInputMode="adjustResize" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA"/>

</manifest>